{
  "name": "Focus Campfire",
  "description": "Extension to help the user focus on their work",
  "version": "1.0",
  "permissions": ["storage", "tabs", "activeTab"],
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "campfire.html",
    "default_icon": "fire.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
