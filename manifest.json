{
  "name": "Focus Campfire",
  "description": "Extension to help the user focus on their work",
  "version": "1.0",
  "permissions": ["storage", "tabs"],
  "manifest_version": 3,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "campfire.html",
    "default_icon": "fire.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
